<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org//dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo02.mapper.LoginMapper">
    <select id="getPasswordByCode" parameterType="String" resultType="String">
        select user_password as userPassword from sys_user where user_name = #{userCode} and user_state="1"
    </select>
</mapper>
